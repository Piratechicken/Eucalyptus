<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Image data</th>
      <th>Name</th>
      <th>Suburb</th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td>
          <% if profile.image_data.present? %>
            <%= image_tag profile.image_url(:thumb) %>
          <% else %>
            <%= image_tag 'avatar-thumb.png' %>
          <% end %>
        </td>
        <td><%= link_to profile.full_name, profile %></td>
        <td><%= "#{profile.suburb}, #{profile.state}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if signed_in? %>
  <%= link_to 'Create my profile', 
  new_profile_path if current_user.profile.nil? %>
<% end %>
