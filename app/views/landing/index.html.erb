<div class = "landing_bar">
  <h1>Eucalyptus</h1>
  <h2>Indigenous plant marketplace</h2>
</div>

<div class="landing-container">
  <div>
    <p><%= link_to 'Buy', listings_path, class: "success button" %></p>
    <p><%= link_to 'Sell', new_listing_path, class: "success button" %></p>

    <% if user_signed_in? %>
      <% if current_user.profile.present? %>
        <p><%= link_to 'My profile', current_user.profile, class: "success button"  %></p>
      <% else %>
        <p><%= link_to 'Create profile', new_profile_path, class: "success button"  %></p>
      <% end %>
      <p><%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "success button"  %></p>
    <% else %>
      <p><%= link_to 'Log in', new_user_session_path, class: "success button"  %></p>
    <% end %>
  </div>
</div>